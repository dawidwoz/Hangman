{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "composite": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hangman-application/interfaces": ["libs/interfaces/src/index.ts"],
      "@hangman-application/ui": ["libs/ui/src/index.ts"],
      "@hangman-application/words": ["libs/words/src/index.ts"]
    }
  },
  "includes": ["**/*.ts"],
  "exclude": ["node_modules", "tmp"]
}
